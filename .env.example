# Server Configuration
NODE_ENV=development
WEB_APP_PORT=3000
WEB_API_ALLOWED_ORIGIN=["http://localhost:8888"]
SOCKET_ALLOWED_ORIGIN=["http://localhost:8888"]

# MongoDB Configuration
MONGO_CONNECT_STRING=mongodb://localhost:27017/chatflux

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CHANNEL=chat-messages
REDIS_MAX_MESSAGES=5000

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=chat-consumer-group
KAFKA_TOPIC=chat-messages
KAFKA_NO_OF_PARTITIONS=3
PROCESS_KAFKA_MESSAGE_LIMIT=10

# Cron Job Configuration
SYNC_CRON_SCHEDULE=*/5 * * * *

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100